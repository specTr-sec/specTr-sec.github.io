---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';

const posts = await getCollection('blog');

const allPosts = posts.filter(post => post.id.startsWith('write-ups/'));

const publishedPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());

const allTags = [...new Set(allPosts.flatMap(post => post.data.tags))].sort();

const selectedTag = Astro.url.searchParams.get('tag');

const filteredPosts = selectedTag
  ? publishedPosts.filter(post => post.data.tags.includes(selectedTag))
  : publishedPosts;
---

<BaseLayout title="Articles">
  <div class="container">
    <h1>Write ups</h1>
    
    <div class="tag-filter mb-xl">
      <a href="/write-ups" class:list={['tag', { 'active': !selectedTag }]}>
        All Writeups
      </a>
      {allTags.map(tag => (
        <a 
          href={`/write-ups?tag=${tag}`}
          class:list={['tag', { 'active': selectedTag === tag }]}
        >
          {tag}
        </a>
      ))}
    </div>
    
    <div>
      {filteredPosts.map(post => (
        <PostCard
          title={post.data.title}
          description={post.data.description ?? ''}
          publishDate={post.data.publishDate}
          tags={post.data.tags}
          id={post.id}
          category={post.data.category}
        />
      ))}
    </div>

    {filteredPosts.length == 0 ? (
      <div class="container">
     <h2>Exciting things coming soon!</h2>
    </div>
    ) : null

    
  </div>
</BaseLayout>

<style>
  .tag-filter {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .tag.active {
    background-color: var(--color-accent-dim);
    border-color: var(--color-accent-primary);
    color: var(--color-text-primary);
  }

  .articles-grid {
    display: grid;
    gap: var(--spacing-lg);
  }
</style>